<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/call_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@drawable/img_user_call"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:id="@+id/remoteIdCall"
        android:visibility="invisible"
        android:text="5002"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:id="@+id/calling_duration"
        android:layout_marginBottom="20dp"
        android:visibility="invisible"
        android:text="00:00"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:id="@+id/call_status"
        android:layout_marginBottom="30dp"
        android:visibility="invisible"
        android:text="Connected"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:id="@+id/call_message"
        android:layout_marginBottom="50dp"
        android:visibility="invisible"
        android:text=""/>

    <LinearLayout
        android:id="@+id/audio_settings"
        android:visibility="visible"
        tools:visibility="visible"
        android:layout_marginTop="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/speaker_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_outline_speaker_on"
            android:layout_marginEnd="40dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:background="@drawable/round_button"/>

        <ImageButton
            android:id="@+id/bluetooth_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="40dp"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:src="@drawable/btn_bluetooth"
            android:visibility="gone"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/answer_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="30dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:src="@drawable/btn_call_normal"/>

        <ImageView
            android:id="@+id/hangup_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/btn_hungup_normal"/>

        <ImageButton
            android:id="@+id/mute_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_outline_mic_off"
            android:layout_marginStart="40dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:background="@drawable/round_button"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:id="@+id/audio_settings_dummy"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/speaker_image_dummy"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="0dp"
            android:background="@drawable/ic_speaker_on"/>

        <ImageView
            android:id="@+id/mute_image_dummy"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="50dp"
            android:background="@drawable/ic_mic_on"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/answer_button_dummy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:visibility="gone"
            android:src="@drawable/btn_call_normal"/>


        <ImageView
            android:id="@+id/hangup_image_dummy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/btn_hungup_normal"/>
    </LinearLayout>



</LinearLayout>